<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_1_0.xsd"
                 version="1.0">

    <persistence-unit-metadata>
        <xml-mapping-metadata-complete/>
        <persistence-unit-defaults>
            <access>PROPERTY</access>
        </persistence-unit-defaults>
    </persistence-unit-metadata>

    <package>com.netcracker.edu.bestgroup.projects.ssh.entities</package>

    <entity class="MMObject">
        <table name="MM_OBJECTS"/>
        <attributes>
            <id name="id"/>
            <basic name="parentId">
                <column name="PARENT_ID"/>
            </basic>
            <basic name="name">
                <column name="NAME"/>
            </basic>
            <basic name="description">
                <column name="DESCRIPTION"/>
            </basic>
        </attributes>

    </entity>
    <entity class="com.netcracker.edu.bestgroup.projects.ssh.entities.Users">
        <table name="USERS"/>
        <attributes>
            <id name="id"/>
            <basic name="name">
                <column name="NAME"/>
            </basic>
            <basic name="login">
                <column name="LOGIN"/>
            </basic>
            <basic name="password">
                <column name="PASSWORD"/>
            </basic>
        </attributes>
    </entity>

    <entity class="Connections">
        <table name="CONNECTIONS"/>
        <attributes>
            <id name="id"/>
            <basic name="password">
                <column name="PASSWORD"/>
            </basic>
            <basic name="connectionType">
                <column name="CONNECTION_TYPE"/>
            </basic>
            <basic name="hostName">
                <column name="HOST_NAME"/>
            </basic>
            <basic name="port">
                <column name="PORT"/>
            </basic>
            <basic name="login">
                <column name="LOGIN"/>
            </basic>

        </attributes>
    </entity>
</entity-mappings>